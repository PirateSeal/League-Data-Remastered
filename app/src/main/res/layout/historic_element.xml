<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/historic_element_pp"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentStart="true"
        />

    <TextView
        android:id="@+id/historic_element_kda"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_toEndOf="@id/historic_element_pp"
        android:layout_toStartOf="@+id/historic_element_rank_pp"
        android:text="KDA" />

    <ImageView
        android:id="@+id/historic_element_rank_pp"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentEnd="true"
        />

</RelativeLayout>